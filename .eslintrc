{
    "extends": "airbnb",
    "rules": {
        "func-names": ["error", "never"],
        "comma-dangle": ["error", "never"],
        "no-trailing-spaces": ["error", { 
            "skipBlankLines": true,
            "ignoreComments": true
        }],
        "padded-blocks": ["error", "always"],
        "class-methods-use-this": [ 0 ],
        "no-plusplus": [ 0 ],
        "no-bitwise": [0]
    }
}